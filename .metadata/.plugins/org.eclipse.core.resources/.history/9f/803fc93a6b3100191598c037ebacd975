package cap4;

public class ControleDecisaoIfElse {
	public static void main(String[] args) {
		double valorDaCompra = 2100;
		double valorApagar = 0;
		
		if(valorDaCompra <=1000) 
			valorApagar = valorDaCompra;			
		else if(valorDaCompra > 1000)	
			valorApagar = valorDaCompra * 5;
		else if(valorDaCompra > 2000)
			valorApagar = valorDaCompra * 10;
		
			
		System.out.println("valor a pagar é " + valorApagar);
	}
}
